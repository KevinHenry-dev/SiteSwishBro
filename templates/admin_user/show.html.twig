{% extends 'base.html.twig' %}

{% block title %}Informations membre{% endblock %}

{% block body %}

<section class="vh-80" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="{{asset('images/baller.png')}}"
                alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
            </div>
              
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>ID : {{ user.id }}</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                <h6>Nom : {{ user.Nom }} </h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                <h6>Pr√©nom : {{ user.Prenom }}</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email </h6>
                    <p class="text-muted">{{ user.email }}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Date de naissance</h6>
                    <p class="text-muted">{{ user.DateDeNaissance ? user.DateDeNaissance|date('Y-m-d') : '' }}</p>
                  </div>
                </div>
                  <div class="col-6 mb-3">
                    <h6>Adresse</h6>
                    <p class="text-muted">{{ user.Adresse }}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Tel</h6>
                    <p class="text-muted">{{ user.Tel }}</p>
                  </div>
                  
                </div>
              </div>
                <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm shadow">Modifier</a>
                 {{ include('admin_user/_delete_form.html.twig') }}
            </div>
          </div>
        </div>
      </div>
<a href="{{ path('app_admin_user_index') }}" class="btn btn-outline-primary btn-sm shadow ms-5">Revenir a la liste</a>
    </div>
  </div>
</section>



{% endblock %}
