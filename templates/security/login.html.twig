{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% for notification in app.flashes('success') %}
<div class="alert alert-success col-md-6 mx-auto text-center">{{ notification }}</div>
{% endfor %}

<section class="h-100">
    <form method="post" class="row g-0 justify-content-center align-items-center h-100">
        {% if error %}
            <div class="alert alert-danger col-md-10 col-lg-8 col-xl-6 text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="col-md-10 col-lg-8 col-xl-6">
            <div class="card card-registration my-4">
                <div class="row g-0">
                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                        <div class="card-body p-md-5 text-black">
                            <h3 class="mb-3 text-uppercase text-center">Connexion</h3>
                            <p class="text-black-50 mb-5">Saisissez votre mail et votre mot de passe !</p>
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            <p class="small mb-5 pb-lg-2"><a class="text-primary" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a></p>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-primary btn-lg px-5 mt-4" type="submit">Connexion</button>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                        <div class="image-container">
                            <img src="{{ asset('images/signin.jpeg') }}" alt="Ballon photo" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
{% endblock %}

