{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
       <div class="container-sm py-3 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-6">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-3 text-uppercase text-center">Réinitialiser votre mot de passe</h3>
                                        {{ form_start(resetForm) }}
                                                {{ form_row(resetForm.plainPassword) }}
                                        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
                                            {{ form_end(resetForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}
