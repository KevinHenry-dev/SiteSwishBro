                    <p class="text-muted">{{ terrain.LongTdb }}</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Latitude</h6>
                    <p class="text-muted">{{ terrain.LattTdb }}</p>
                  </div>
                  
                </div>
                <a href="{{ path('app_admin_terrain_edit', {'id': terrain.id}) }}" class="btn btn-outline-primary btn-sm shadow">Modifier</a>
