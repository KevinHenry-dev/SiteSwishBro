<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} HOOP & SHOOT {% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

        



<div>
  <div class="container-fluid" role="navigation">
    
    <div class="row text-center align-items-center g-0">
      <div class="col-lg-5 col-md-5 d-none d-lg-block d-md-block d-xs-none ms-auto">
        <div class="d-flex justify-content-around border-top border-bottom border-primary border-2">
          <div class="customLink"><a class="d-inline-block p-3" href="{{ path('app_terrain')}}">Playgrounds</a></div>
          <div class="customLink"><a class="d-inline-block p-3" href="#">Team</a></div>
          <div class="customLink"><a class="d-inline-block p-3" href="#">Jouer</a></div>
           {% if is_granted('ROLE_ADMIN') %}
          <div class="customLink"><a class="d-inline-block p-3" href="{{ path('app_administrateur_index')}}">Back office</a></div>
           {% endif %}
        </div>
        </div>
          
      <div class="col-lg-2 col-md-2 mx-auto" style="max-width:120px;">
         <a class="navbar-brand" href="{{ path('home_swish') }}">
            <img src="{{ asset('images/newlogo.png')}}" style="width: 100px;" /> 
        </a>
      </div>

      <div class="col-lg-5 col-md-5 d-none d-lg-block d-md-block d-xs-none me-auto">
        <div class="d-flex justify-content-around border-top border-bottom border-primary border-2">
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <div class="customLink"><a class="d-inline-block p-3" href="{{path('app_profil_index')}}">Mon profil</a></div>
          <div class="customLink"><a class="d-inline-block p-3" href="{{ path('app_logout') }}">Déconnexion</a></div>
          {% else %}
          <div class="customLink"><a class="d-inline-block p-3" href="{{ path('app_register') }}">Inscription</a></div>
          <div class="customLink"><a class="d-inline-block p-3" href="{{ path('app_login') }}">Connexion</a></div>
          {% endif %} 
           <div class="customLink"><a class="d-inline-block p-3" href="{{path('app_contact')}}">Contact</a></div>
        </div>
      </div>
    </div>
  </div>
</div>




    </head>




        {% block body %} 

        
        
        {% endblock %}



    <footer class="bottom bg-light py-1">
    <div class="container text-center">
    <p class="mb-0"><i>© 2024 SwishBro</i> | <a href="{{path('app_contact')}}">Contact</a></p>
    </div>
    </footer>
    </body>  



    {# CDN BOOTSTRAP JAVASCRIPT#}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="{{ asset('js/script.js') }}"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</html>
